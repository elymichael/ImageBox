<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ImageBox.Pages.TrashPage" BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black">
            <StackLayout Padding="10" Margin="10" HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal">
                    <StackLayout HorizontalOptions="Start" VerticalOptions="Center">
                        <Label x:Name="txtTitleCloseIcon" Text="&#xf410;" TextColor="White" FontSize="Medium" HorizontalOptions="Center" FontFamily="{StaticResource FontAwesomeSolid}" VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CloseTrash}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
                        <Label x:Name="trashtitle" Text="Trash" HorizontalOptions="Center" FontSize="Medium" FontAttributes="Bold" VerticalOptions="Center" TextColor="White" />
                        <Label Text="delete photos to free up space" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
                    </StackLayout>
                </StackLayout>
            </StackLayout>
            <StackLayout x:Name="MainLayout" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BindingContext="{Binding TrashPage}">
                <ScrollView HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">
                    <Grid x:Name="flexLayout">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ScrollView>
                <ActivityIndicator x:Name="activityIndicator"
                           IsRunning="{Binding ActivityIndicatorIsRunning}" IsVisible="{Binding ActivityIndicatorIsRunning}"
                           VerticalOptions="Center" />
            </StackLayout>
            <Button x:Name="btnRecover" Text="{Binding RecoverText}" Padding="0" Clicked="btnRecover_Clicked" />
            <Button x:Name="btnDelete" Text="{Binding DeleteText}" Padding="0" BackgroundColor="Red" Clicked="btnDelete_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>